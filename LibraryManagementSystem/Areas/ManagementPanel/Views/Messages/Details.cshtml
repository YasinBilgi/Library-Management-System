@model LibraryManagementSystem.Entites.Models.Message

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/ManagementPanel/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Adı Soyadı
        </dt>
        <dd class = "col-sm-10">
            @Model.FullName
        </dd>
        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @Model.Email
        </dd>
        <dt class = "col-sm-2">
            Telefon
        </dt>
        <dd class = "col-sm-10">
            @Model.Phone
        </dd>
        <dt class = "col-sm-2">
            Konu
        </dt>
        <dd class = "col-sm-10">
            @Model.Subject
        </dd>
        <dt class = "col-sm-2">
            Açıklama
        </dt>
        <dd class = "col-sm-10">
            @Model.Description
        </dd>
        <dt class = "col-sm-2">
            Durumu
        </dt>
        <dd class = "col-sm-10">
            @Model.İsActive
        </dd>
        <dt class = "col-sm-2">
            Tarih
        </dt>
        <dd class = "col-sm-10">
            @Model.RegisterDate
        </dd>
    </dl>
</div>

