@model LibraryManagementSystem.Entites.Models.Book

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/ManagementPanel/Views/Shared/_Layout.cshtml";
}

<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            İsim
        </dt>
        <dd class = "col-sm-10">
            @Model.Name
        </dd>
        <dt class = "col-sm-2">
            Sayfa Sayısı
        </dt>
        <dd class = "col-sm-10">
            @Model.NumberPage
        </dd>
        <dt class = "col-sm-2">
            Resim
        </dt>
        <dd class = "col-sm-10">
            <img decoding="async" src="@Model.İmageUrl" width="100px" asp-append-version="true" />
        </dd>
        <dt class = "col-sm-2">
            Yayınlanma tarihi
        </dt>
        <dd class = "col-sm-10">
            @Model.PublishDate
        </dd>
        <dt class = "col-sm-2">
            Seri Numarası
        </dt>
        <dd class = "col-sm-10">
            @Model.Isbn
        </dd>
        <dt class="col-sm-2">
            Stok
        </dt>
        <dd class="col-sm-10">
            @Model.BookDetail.Stock
        </dd>
        <dt class="col-sm-2">
            Açıklama
        </dt>
        <dd class="col-sm-10">
            @Model.BookDetail.Description
        </dd>
        <dt class = "col-sm-2">
            Durumu
        </dt>
        <dd class = "col-sm-10">
            @Model.İsActive
        </dd>
        <dt class = "col-sm-2">
            Tarih
        </dt>
        <dd class = "col-sm-10">
            @Model.RegisterDate
        </dd>
        <dt class = "col-sm-2">
            Kategori
        </dt>
        <dd class = "col-sm-10">
            @Model.Category
        </dd>
    </dl>
</div>

