@model LibraryManagementSystem.Entites.Models.Author

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/ManagementPanel/Views/Shared/_Layout.cshtml";
}

<h1>Detay</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Adı Soyadı
        </dt>
        <dd class = "col-sm-10">
            @Model.FullName
        </dd>
        <dt class = "col-sm-2">
            Doğum Tarihi
        </dt>
        <dd class = "col-sm-10">
            @Model.BirthDate
        </dd>
        <dt class = "col-sm-2">
            Biografi
        </dt>
        <dd class = "col-sm-10">
            @Model.Biography
        </dd>
        <dt class = "col-sm-2">
            Resim
        </dt>
        <dd class = "col-sm-10">
            <img decoding="async" src="@Model.İmageUrl" width="100px" asp-append-version="true" />
        </dd>
        <dt class = "col-sm-2">
            Durumu
        </dt>
        <dd class = "col-sm-10">
            @Model.İsActive
        </dd>
        <dt class = "col-sm-2">
            Tarih
        </dt>
        <dd class = "col-sm-10">
            @Model.RegisterDate
        </dd>
    </dl>
</div>

